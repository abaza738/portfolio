{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.output",
			"!**/.nuxt",
			"!**/.vscode",
			"!**/dist",
			"!**/*.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "none",
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
