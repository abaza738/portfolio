{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules",
			".output",
			".nuxt",
			".vscode",
			"dist",
			"**/*.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "none",
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
