    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@iconify-json/fa6-brands": "^1.2.6",
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/solar": "^1.2.5",
    "@iconify-json/uil": "^1.2.3",
    "@vueuse/core": "^14.2.1",
    "@vueuse/nuxt": "^14.2.1",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "packageManager": "pnpm@10.29.3",
  "pnpm": {
